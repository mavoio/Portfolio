---
const testimonials = [
  {
    name: "Rahul Sharma",
    role: "CTO at TechVision India",
    image: "https://api.dicebear.com/7.x/personas/svg?seed=rahul&backgroundColor=b6e3f4",
    content: "Danish's expertise in full-stack development is exceptional. He transformed our legacy system into a modern, high-performance platform. His attention to detail and problem-solving skills are remarkable.",
    location: "Mumbai, India"
  },
  {
    name: "Priya Patel",
    role: "Founder of StartupHub",
    image: "https://api.dicebear.com/7.x/personas/svg?seed=priya&backgroundColor=ffdfbf",
    content: "Working with Danish was a game-changer for our startup. His innovative solutions and deep understanding of modern web technologies helped us launch our platform months ahead of schedule.",
    location: "Bangalore, India"
  },
  {
    name: "Arun Verma",
    role: "Lead Developer at CloudTech",
    image: "https://api.dicebear.com/7.x/personas/svg?seed=arun&backgroundColor=c1dfc4",
    content: "Danish's security implementations are top-notch. His OSINT tools and validation systems show his commitment to building secure and reliable solutions. A true professional in every sense.",
    location: "Hyderabad, India"
  }
];
---

<section class="relative py-32 overflow-hidden" id="testimonials">
  <!-- Background Elements -->
  <div class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.03)_1px,transparent_1px),linear-gradient(to_right,rgba(255,255,255,0.03)_1px,transparent_1px)] bg-[size:4rem_4rem] [mask-image:radial-gradient(ellipse_80%_50%_at_50%_0%,black_70%,transparent_110%)]"></div>

  <!-- Content Container -->
  <div class="relative max-w-6xl mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center mb-20">
      <h2 class="text-3xl sm:text-4xl font-light text-white mb-4 tracking-wider">Client Testimonials</h2>
      <div class="h-px w-24 mx-auto bg-gradient-to-r from-transparent via-white/20 to-transparent"></div>
    </div>

    <!-- Testimonials Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {testimonials.map((testimonial, index) => (
        <div class="group">
          <div class="relative h-full">
            <!-- Card Glow Effect -->
            <div class="absolute -inset-[1px] bg-gradient-to-b from-white/10 via-white/5 to-transparent rounded-2xl opacity-0 group-hover:opacity-100 blur-sm transition-all duration-500"></div>
            
            <!-- Card Content -->
            <div class="relative h-full bg-white/[0.02] backdrop-blur-xl rounded-xl border border-white/10 p-6 group-hover:border-white/20 transition-all duration-500">
              <!-- Quote Icon -->
              <div class="absolute -top-4 left-6">
                <div class="w-8 h-8 rounded-full bg-white/5 border border-white/10 flex items-center justify-center">
                  <svg class="w-4 h-4 text-white/40" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M4.583 17.321C3.553 16.227 3 15 3 13.011c0-3.5 2.457-6.637 6.03-8.188l.893 1.378c-3.335 1.804-3.987 4.145-4.247 5.621.537-.278 1.24-.375 1.929-.311 1.804.167 3.226 1.648 3.226 3.489a3.5 3.5 0 01-3.5 3.5c-1.073 0-2.099-.49-2.748-1.179zm10 0C13.553 16.227 13 15 13 13.011c0-3.5 2.457-6.637 6.03-8.188l.893 1.378c-3.335 1.804-3.987 4.145-4.247 5.621.537-.278 1.24-.375 1.929-.311 1.804.167 3.226 1.648 3.226 3.489a3.5 3.5 0 01-3.5 3.5c-1.073 0-2.099-.49-2.748-1.179z"/>
                  </svg>
                </div>
              </div>

              <!-- Testimonial Content -->
              <div class="mb-8 pt-4">
                <p class="text-white/60 text-sm leading-relaxed italic">
                  "{testimonial.content}"
                </p>
              </div>

              <!-- Author Info -->
              <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-full overflow-hidden border border-white/10">
                  <img 
                    src={testimonial.image} 
                    alt={testimonial.name}
                    class="w-full h-full object-cover"
                  />
                </div>
                <div>
                  <h4 class="text-white/90 font-light">{testimonial.name}</h4>
                  <div class="flex items-center gap-2 mt-1">
                    <span class="text-xs text-white/40">{testimonial.role}</span>
                    <span class="text-white/20">â€¢</span>
                    <span class="text-xs text-white/40">{testimonial.location}</span>
                  </div>
                </div>
              </div>

              <!-- Decorative Elements -->
              <div class="absolute top-0 right-0 w-24 h-24 bg-gradient-to-br from-white/[0.03] to-transparent rounded-tr-xl"></div>
              <div class="absolute bottom-0 left-0 w-24 h-24 bg-gradient-to-tr from-white/[0.03] to-transparent rounded-bl-xl"></div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-5px); }
  }

  .testimonial-card {
    animation: float 6s ease-in-out infinite;
  }
</style> 