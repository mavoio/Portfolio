---
const projects = [
  {
    title: "MavoSocial OSINT",
    description: "Advanced social media search tool utilizing OSINT techniques to find user profiles across multiple platforms by username.",
    tech: ["Python", "OSINT", "API Integration"],
    link: "https://github.com/mavoio/MavoSocial-OSINT",
    type: "Security Tool"
  },
  {
    title: "CC Checker",
    description: "Credit card validation system implementing Luhn's algorithm for secure and efficient verification.",
    tech: ["Algorithm", "Security", "Validation"],
    link: "https://github.com/mavoio/CC-Checker",
    type: "Security Tool"
  },
  {
    title: "NextJS Hosting Landing",
    description: "Modern, high-performance landing page for VPS hosting services built with Next.js 15.",
    tech: ["Next.js", "React", "TailwindCSS"],
    link: "https://github.com/mavoio/NextJS-Hosting-Landing-Page",
    type: "Web Development"
  }
];
---

<section class="relative py-32 overflow-hidden" id="projects">
  <!-- Background Elements -->
  <div class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.03)_1px,transparent_1px),linear-gradient(to_right,rgba(255,255,255,0.03)_1px,transparent_1px)] bg-[size:4rem_4rem] [mask-image:radial-gradient(ellipse_80%_50%_at_50%_0%,black_70%,transparent_110%)]"></div>

  <!-- Content Container -->
  <div class="relative max-w-6xl mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center mb-20">
      <h2 class="text-3xl sm:text-4xl font-light text-white mb-4 tracking-wider">Featured Projects</h2>
      <div class="h-px w-24 mx-auto bg-gradient-to-r from-transparent via-white/20 to-transparent"></div>
    </div>

    <!-- Projects Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map((project) => (
        <a href={project.link} target="_blank" rel="noopener noreferrer" class="group">
          <div class="relative h-full">
            <!-- Card Glow Effect -->
            <div class="absolute -inset-[1px] bg-gradient-to-b from-white/10 via-white/5 to-transparent rounded-2xl opacity-0 group-hover:opacity-100 blur-sm transition-all duration-500"></div>
            
            <!-- Card Content -->
            <div class="relative h-full bg-white/[0.02] backdrop-blur-xl rounded-xl border border-white/10 group-hover:border-white/20 transition-all duration-500 overflow-hidden">
              <!-- Project Type Badge -->
              <div class="absolute top-4 right-4">
                <span class="px-3 py-1 text-[10px] font-light tracking-wider text-white/70 bg-white/5 rounded-full border border-white/10">
                  {project.type}
                </span>
              </div>

              <!-- Content Padding -->
              <div class="p-6 pt-12">
                <!-- Title -->
                <h3 class="text-xl text-white/90 font-light tracking-wide mb-3 group-hover:text-white transition-colors duration-300">
                  {project.title}
                </h3>

                <!-- Description -->
                <p class="text-sm text-white/50 leading-relaxed mb-6 group-hover:text-white/60 transition-colors duration-300">
                  {project.description}
                </p>

                <!-- Tech Stack -->
                <div class="flex flex-wrap gap-2">
                  {project.tech.map((tech) => (
                    <span class="px-2 py-1 text-[10px] font-light tracking-wider text-white/60 bg-white/5 rounded-md">
                      {tech}
                    </span>
                  ))}
                </div>

                <!-- Hover Indicator -->
                <div class="absolute right-4 bottom-4 opacity-0 transform translate-x-4 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-300">
                  <svg class="w-5 h-5 text-white/40" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                  </svg>
                </div>
              </div>

              <!-- Bottom Gradient -->
              <div class="absolute inset-x-0 bottom-0 h-px bg-gradient-to-r from-transparent via-white/20 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-500"></div>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-5px); }
  }

  .animate-float {
    animation: float 3s ease-in-out infinite;
  }
</style> 