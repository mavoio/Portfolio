<div id="preloader" class="fixed inset-0 z-50 bg-black flex items-center justify-center">
  <div class="relative flex flex-col items-center gap-8">
    <!-- Simple premium loader -->
    <div class="relative w-24 h-24">
      <svg class="w-full h-full" viewBox="0 0 100 100">
        <!-- Background circle -->
        <circle 
          class="text-neutral-900" 
          stroke-width="1.5" 
          stroke="currentColor" 
          fill="none" 
          r="44" 
          cx="50" 
          cy="50"
        />
        <!-- Loading progress -->
        <circle 
          class="text-white origin-center -rotate-90" 
          stroke-width="1.5" 
          stroke="currentColor" 
          fill="none" 
          r="44" 
          cx="50" 
          cy="50" 
          stroke-dasharray="276" 
          stroke-dashoffset="276"
          stroke-linecap="round"
        />
      </svg>
    </div>

    <!-- Minimal text -->
    <div class="flex flex-col items-center opacity-0" id="preloader-text">
      <span class="text-[0.625rem] text-neutral-500 tracking-[0.5em] uppercase">Loading</span>
      <span class="mt-2 text-xl font-light tracking-[0.25em] text-white">DANISH</span>
    </div>
  </div>
</div>

<script>
  window.addEventListener('load', () => {
    const preloader = document.getElementById('preloader');
    const circle = preloader?.querySelector('circle:last-child');
    const text = document.getElementById('preloader-text');
    
    // Fade in text
    if (text) {
      text.style.transition = 'opacity 0.8s cubic-bezier(0.16, 1, 0.3, 1)';
      text.style.opacity = '1';
    }

    // Animate circle
    if (circle) {
      circle.style.transition = 'stroke-dashoffset 1.2s cubic-bezier(0.16, 1, 0.3, 1)';
      circle.style.strokeDashoffset = '0';
    }
    
    // Fade out preloader
    setTimeout(() => {
      if (preloader) {
        preloader.style.transition = 'opacity 0.6s cubic-bezier(0.16, 1, 0.3, 1)';
        preloader.style.opacity = '0';
        setTimeout(() => {
          preloader.style.display = 'none';
          document.body.style.overflow = 'visible';
        }, 600);
      }
    }, 1800);
  });
</script>

<style>
  #preloader {
    backdrop-filter: blur(16px);
  }
</style> 